def lire_message_depuis_stdin():
    mesg=b""
    while True:
        line = sys.stdin.buffer.readline().strip()
        chunk_length = int(line, 16)
        if chunk_length != 0:
                chunk = sys.stdin.buffer.read(chunk_length)
                mesg+=chunk
                sys.stdin.buffer.readline()
        else:
            break

    return mesg

